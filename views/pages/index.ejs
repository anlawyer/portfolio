<body>
  <section class="hero is-fullheight is-default is-bold">
  <% include ../partials/header %>
    <div class="hero-body">
      <div class="container">
        <div class="columns">
          <div class="column is-4">
            <figure class="image">
              <img src="../../images/me.JPG" alt="picture of alison">
            </figure>
            <br />
            <div class="columns">
              <div class="column is-12">
                <p>
                  That's me!
                  <span class="icon">
                    <i class="fa fa-arrow-up" aria-hidden="true"></i>
